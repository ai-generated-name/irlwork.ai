# irlwork.ai API Configuration
# Copy this file to .env and fill in your values

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # Required for bypassing RLS on backend

# Server
PORT=3002
NODE_ENV=development

# CORS
CORS_ORIGINS=https://www.irlwork.ai,http://localhost:5173

# Cloudflare R2 (for proof/avatar uploads)
R2_CLOUDFLARE_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=irlwork-proofs
R2_PUBLIC_URL=https://pub-your-account-id.r2.dev  # or your custom domain

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
PLATFORM_FEE_PERCENT=15

# Frontend
FRONTEND_URL=https://www.irlwork.ai

# API
API_URL=http://localhost:3002
